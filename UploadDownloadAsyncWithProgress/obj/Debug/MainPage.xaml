<Page
    x:Class="UploadDownloadAsyncWithProgress.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UploadDownloadAsyncWithProgress"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:UploadDownloadAsyncWithProgress.Converter"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,0,25,0"/>
            <Setter Property="Height" Value="150"/>
        </Style>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="#EE9736">
        <Viewbox>
            <Grid Width="1280" Height="800" Background="#EE9736">
            <ListView Margin="100,75,100,75" Name="FileList" HorizontalContentAlignment="Stretch" Background="White"  SelectionMode="None" d:IsHidden="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                  
                    <Grid Name="ListItemGrid" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="5">
                            <Border BorderBrush="Lavender" BorderThickness="2">
                                <Image Stretch="Fill" Source="{Binding FileImage}"/>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Background="Lavender" Height="150" Tag="{Binding}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                             </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>                               
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Foreground="Black" Text="{Binding FileName}" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="10,0,0,0"/>
                                    <ProgressBar Name="DownloadProgressBar" Visibility="{Binding IsUploadingOrDownloading,Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" Value="{Binding ProgressPercentage,UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Foreground="Black" Text="{Binding ProgressDetails}" FontSize="10" Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Top"/>

                            <Button x:ConnectionId='1' Name="DownloadButton" Visibility="{Binding IsUploaded,Converter={StaticResource BooleanToVisibilityConverter}}" BorderBrush="Black" Margin="0,0,10,0" Width="110" Foreground="Black" Content="Download" Grid.Column="2" Grid.Row="1" Tag="{Binding FileName}" HorizontalAlignment="Right"                             >
                            </Button>
                            <Button x:ConnectionId='2' Name="UploadButton" Visibility="{Binding IsFileSelected,Converter={StaticResource BooleanToVisibilityConverter}}"  BorderBrush="Black" Margin="0,0,10,0" Width="110" Foreground="Black" Content="Upload" Grid.Column="2" Grid.Row="1" Tag="{Binding FileName}" HorizontalAlignment="Right"                           >
                            </Button>
                            <Button x:ConnectionId='3' Name="PickUpFile" Visibility="{Binding IsUploaded,Converter={StaticResource ReverseBooleanToVisibilityConverter}}"  BorderBrush="Black" Width="110" Foreground="Black" Content="Browse" Grid.Column="1" Grid.Row="1" Tag="{Binding FileName}" HorizontalAlignment="Right"                              >
                            </Button>
                        </Grid>
                    </Grid>      
             
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
                </Grid>
            </Viewbox>
    </Grid>
</Page>

